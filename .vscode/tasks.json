{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Conan Install",
            "type": "shell",
            "command": "conan install . --output-folder=build --build=missing",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "CMake Conan Configure",
            "type": "shell",
            "command": "cmake --preset=conan-release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
			"dependsOn": ["Conan Install"]
        },
        {
            "label": "CMake Conan Build",
            "type": "shell",
            "command": "cmake --build --preset=conan-release -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
			"dependsOn": ["CMake Conan Configure"]
        }
    ]
}
