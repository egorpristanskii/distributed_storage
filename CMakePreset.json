{
    "version": 3,
    "configurePresets": [
        {
            "name": "conan-release",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_TOOLCHAIN_FILE": "build/conan/conan_toolchain.cmake"
            },
            "environment": {
                "CC": "/usr/bin/clang-19",
                "CXX": "/usr/bin/clang++-19"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "conan-release",
            "configurePreset": "conan-release",
            "jobs": 8
        }
    ]
}
